# X API v2 Configuration
X_API_CLIENT_ID=your_client_id_here
X_API_CLIENT_SECRET=your_client_secret_here
X_API_BEARER_TOKEN=your_bearer_token_here
X_API_REDIRECT_URI=http://localhost:8080/callback

# Database Configuration
DATABASE_URL=sqlite:///x_follow_bot.db

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=false

# Bot Configuration
BOT_MAX_FOLLOWS_PER_HOUR=50
BOT_MAX_LIKES_PER_HOUR=100
BOT_SEARCH_KEYWORDS=python,#programming,#ai
BOT_MIN_FOLLOWERS=10
BOT_MAX_FOLLOWERS=50000
BOT_ENABLE_SAFETY_CHECKS=true

# Logging Configuration
LOGGING_LEVEL=INFO
LOGGING_FORMAT=json
LOGGING_FILE_PATH=logs/bot.log

# Environment
ENVIRONMENT=development
DEBUG=false